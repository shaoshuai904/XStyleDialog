<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ms_shape_alert_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Alert" />


    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="body text" />

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ms_sel_action_sheet_single_line"
        android:padding="5dp"
        android:textCursorDrawable="@color/ms_def_title_color" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ms_act_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ms_dialog_bottom_height"
        android:layout_margin="1px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ms_sel_alert_dialog_left"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/ms_def_title_color"
            android:textSize="16sp"
            tools:text="Cancel" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ms_act_line" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ms_sel_alert_dialog_right"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/ms_def_title_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="OK" />
    </LinearLayout>

</LinearLayout>